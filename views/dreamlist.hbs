<!--==========================
    Header
  ============================-->
<header id="header">
    <div class="container">
        <div id="logo" class="pull-left">
            <h1><a href="/auth/google">welcome <span>{{name}}</span></a></h1>
        </div>
        <nav id="nav-menu-container">
            <ul class="nav-menu">
                <li style="text-transform: uppercase;"><a href="/dreams/add">add dream</a></li>
                <li class="button"><a href="/auth/logout">LOG OUT</a></li>
            </ul>
        </nav><!-- #nav-menu-container -->
    </div>
</header><!-- #header -->

<!--==========================
    User Dream Cards
  ============================-->
<div id="page-container">

    {{#if dreams}}

    <section id="dream-card" class=" wow fadeInUp">
        <div class="container" style="padding-bottom: 3rem;">
            <div class="row justify-content-md-center">

                {{#each dreams}}

                <div class="col-md-auto col-lg-10 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">{{title}}

                                <a href="#myModal" data-toggle="modal" data-book-id="{{_id}}">
                                    <i class="fa fa-trash float-right" aria-hidden="true" style="font-size:22px"></i>
                                </a>

                                <a href="/dreams/edit/{{_id}}"><i class="fa fa-pencil-square-o float-right"
                                        aria-hidden="true"
                                        style="font-size:24px;color:black;margin-right: 10px;"></i></a>
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">{{formatDate createdAt 'MMMM Do YYYY'}}</small>
                            <small class="text-muted float-right" style="text-transform: uppercase;">{{state}}</small>
                        </div>
                    </div>

                    {{!-- Delete Modal --}}
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Delete Dream</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <!-- Modal body -->
                                <div class="modal-body">
                                    Are you sure you want to delete this dream?
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <form action="" method="POST" id="delete-form">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button id="button1" type="submit" class="btn"
                                            style="background-color: #d6052b;color:white">
                                            Yes
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{/each}}

            </div><br>
        </div>
    </section>

    {{else}}

    {{!-- No dreams Modal --}}
    <div class="modal fade" id="noDreamList">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">No Dreams...</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    There are no Dreams to show.<br><br>
                    Please go to 'ADD DREAM' to create your dream feed.
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button style="background-color: #d6052b;color:white" type="button" class="btn"
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{/if}}


    <!--==========================
    Footer
  ============================-->
    <footer id="footer-list">
        <div class="container">
            <div class="credits">
                For <span>Dreamers</span> By <span>Dreamers</span>
            </div>
            <div class="copyright">
                &copy; Copyright <strong>MyDreams</strong>. All Rights Reserved
            </div>
        </div>
    </footer><!-- #footer -->

</div>

