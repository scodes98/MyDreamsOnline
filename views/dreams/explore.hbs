<div class="row">
    {{#each dreams}}
    <div class="col s12 m4">
        <div class="card">
            {{!-- <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div> --}}
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <h4>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</h4>
                <br>
                <div class="chip">
                    {{!-- <img src="{{user.image}}" alt=""> --}}
                    <a href="/dreams/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="center-align">
                <p>{{state}}</p>
            </div>
            <div class="card-action center-align">
                <a href="/dreams/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No dreams to display</p>
    {{/each}}
</div>